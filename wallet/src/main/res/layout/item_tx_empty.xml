<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        style="@style/t_layout"
        android:background="@color/tx_list_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_img"
            android:layout_width="60dp"
            android:layout_height="78dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/line_gap_16"
            android:src="@drawable/img_tx_empty" />

        <TextView
            android:id="@+id/contacts_empty_msg"
            style="@style/t_text_msg"
            android:layout_below="@id/empty_img"
            android:layout_centerHorizontal="true"
            android:text="@string/tx_empty_msg"
            android:textColor="#8EA0B8" />


    </RelativeLayout>

</layout>
