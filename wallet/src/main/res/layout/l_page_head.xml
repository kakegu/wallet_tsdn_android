<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_header_height"
        android:layout_margin="@dimen/one_dp"
        android:background="@color/page_title_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/ic_26"
            android:layout_height="@dimen/ic_26"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_main_20"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title__"
            style="@style/t_sub_title"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/line_gap_10"
            android:layout_toRightOf="@id/icon"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_middle"
            style="@style/t_sub_title"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/ic_dialog_close"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/ic_20"
                android:layout_height="@dimen/ic_20"
                android:layout_marginRight="@dimen/page_margin_26"
                android:layout_marginLeft="@dimen/page_margin_26"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dialog_close" />

        </FrameLayout>


    </RelativeLayout>

</FrameLayout>
