<resources>

    <item name="mnemonic_0" type="id" />
    <item name="mnemonic_1" type="id" />
    <item name="mnemonic_2" type="id" />
    <item name="mnemonic_3" type="id" />
    <item name="mnemonic_4" type="id" />
    <item name="mnemonic_5" type="id" />
    <item name="mnemonic_6" type="id" />
    <item name="mnemonic_7" type="id" />
    <item name="mnemonic_8" type="id" />
    <item name="mnemonic_9" type="id" />
    <item name="mnemonic_10" type="id" />
    <item name="mnemonic_11" type="id" />

    <!-- Move to file colors.xml later-->

    <style name="t_text_base" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/t_title_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/place_holder</item>
    </style>

    <style name="tx_field" parent="@style/t_text_base">
        <item name="android:layout_marginRight">@dimen/padding_main</item>
        <item name="android:textColor">@color/font_gray_amount</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="t_text_amount_subtitle" parent="@style/t_text_base">
        <item name="android:textColor">@color/font_gray_amount</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="t_title" parent="@style/t_text_base">
        <item name="android:textColor">@color/t_title_black</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <!--<item name="android:fontFamily">sans-serif-medium</item>-->
    </style>

    <style name="t_pwd" parent="@style/t_text_base">
        <item name="android:textColor">@color/t_title_black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginRight">-4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:backgroundTint">@drawable/t_edit_bg</item>
        <item name="android:hint">@string/pwd_hint</item>
        <item name="android:textColorHint">@color/t_hint</item>
    </style>

    <style name="t_err" parent="@style/t_text_base">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/t_err</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/t_drawable_padding</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/place_holder</item>
    </style>

    <style name="t_strength" parent="@style/t_text_base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="t_strength_bar" parent="@style/t_text_base">
        <item name="android:background">@color/t_strength_none</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/line_gap_6</item>
        <item name="android:layout_height">@dimen/pwd_strength_bar_height</item>
    </style>

    <style name="t_sub_title" parent="@style/t_text_base">
        <item name="android:text">@string/place_holder</item>
        <item name="android:textColor">@color/t_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="t_url" parent="@style/t_text_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/t_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="t_text_msg" parent="@style/t_text_base">
        <item name="android:textColor">@color/t_text</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="t_text_msg_16" parent="@style/t_text_base">
        <item name="android:textColor">@color/t_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="t_text_dialog_msg" parent="@style/t_text_base">
        <item name="android:textColor">@color/dialog_msg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="t_text_msg_gray" parent="@style/t_text_base">
        <item name="android:background">@color/t_f_gray</item>
        <item name="android:textColor">@color/t_title_black</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="t_btn_blue" parent="@style/t_text_base">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:text">@string/next_step</item>
        <item name="android:background">@drawable/t_btn_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_f_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="t_btn_white" parent="@style/t_btn_blue">
        <item name="android:background">@drawable/t_btn_bg_white</item>
        <item name="android:textColor">@color/t_blue</item>
    </style>

    <style name="t_layout">
        <item name="android:background">@color/bg_white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/overflow_menu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:itemTextAppearance">@style/ActionBar.TitleTextStyle</item>
    </style>
    <!--<item name="android:actionBarPopupTheme">@style/Theme.YourAppsName.ActionBarPopupTheme</item>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="overflow_menu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">10.0dp</item>
        <item name="android:popupBackground">@color/bg_white</item>
        <!--<item name="android:popupBackground">@drawable/bg_action_popup</item>-->
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">@dimen/line_gap_12</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <!--<item name="android:divider">#000000</item>-->
        <!--<item name="android:dividerHeight">1dp</item>-->
    </style>


    <style name="ActionBar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/t_text</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/t_text_base</item>
        <item name="tabSelectedTextColor">@color/t_text</item>
        <item name="tabIndicatorColor">@color/t_blue</item>
    </style>

    <style name="popupMenuStyle">
        <item name="android:divider">@color/tx_red</item>
        <item name="android:dividerHeight">@dimen/one_dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="t_observer_tag" parent="@style/t_text_base">
        <item name="android:textColor">@color/tag_observer_wallet_line</item>
        <item name="android:background">@drawable/bg_observer_tag</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="blue_bold_16" parent="@style/t_text_base">
        <item name="android:layout_marginLeft">@dimen/line_gap_4</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/t_blue</item>
    </style>



    <declare-styleable name="PageHeader">
        <attr name="ttt_icon" format="reference" />
        <attr name="ttt_title" format="reference" />
        <attr name="ttt_title_middle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ActionMenuItem">
        <attr name="action_icon" format="reference" />
        <attr name="action_text" format="reference" />
    </declare-styleable>

</resources>
